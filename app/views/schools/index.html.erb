<h1>A list of all schools</h1>
<ul>
  <% schools.each do |school| %>
    <li><%= link_to( school.name, school_path(school)) %> </li>
  <% end %>
</ul>

<%= link_to('Teachers index', teachers_path) %>
<%= link_to('Courses index', courses_path) %>

<!-- offset -->
<%= link_to("< Previous page" , schools_path(page: page - 1)) unless page < 0 %>
<%= link_to("More on next page >", schools_path(page: page + 1)) if schools.size >= 25 %>
